{
  "name": "ecommerce-starter",
  "version": "4.3.0",
  "description": "A boilerplate for ecommerce web applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/sahat/hackathon-starter.git"
  },
  "author": "Pratap Singh",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon app.js",
    "start": "node app.js",
    "test": "mocha --reporter spec",
    "eslint": "eslint **/*.js"
  },
  "dependencies": {
    "apollo-server-express": "1.2.0",
    "async": "2.6.0",
    "body-parser": "1.18.2",
    "chalk": "2.3.0",
    "compression": "1.7.1",
    "dotenv": "4.0.0",
    "errorhandler": "1.5.0",
    "express": "4.16.2",
    "faker": "4.1.0",
    "graphql": "0.11.7",
    "graphql-tools": "2.7.2",
    "joi": "13.0.2",
    "lodash": "4.17.4",
    "mongoose": "4.13.2",
    "morgan": "1.9.0",
    "multer": "1.3.0",
    "nodemon": "1.12.1",
    "request-promise": "4.2.2",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "eslint": "4.11.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-chai-friendly": "0.4.0",
    "eslint-plugin-import": "2.8.0",
    "mocha": "4.0.1",
    "sinon": "4.1.2",
    "sinon-mongoose": "2.0.2",
    "supertest": "3.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    },
    "env": {
      "jasmine": true,
      "mocha": true,
      "node": true
    },
    "plugins": ["chai-friendly"]
  }
}